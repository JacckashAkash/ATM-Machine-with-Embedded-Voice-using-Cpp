void modify1()
{
	fstream file;
	file.open("akku1.doc",ios::in|ios::out);
int c=3;
static  int c1=0;
		int d;
	cout<<"enter your account number";
	cin>>d;
	cout<<"\n";
	if(acc.returnacc()==d){
	
		acc.modify();
		Sleep(1000);
			file.write((char*)&acc,sizeof(acc));
	}else if(c1!=2){

c1++;
cout<<"try again for it \n";
modify1();}
else  {
	cout<<"looking like with wrong intention\n";

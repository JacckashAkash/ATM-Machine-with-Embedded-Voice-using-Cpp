	cout<<"Not authorised person";
	Sleep(2000);
	
	}
	

	while(file.read((char*)&acc,sizeof(acc))){
	
	if(acc.returnacc()==d){
	cout<<"enter to deposit";
	cin>>f;
    acc.deposit_money+=d;
		Sleep(2000);

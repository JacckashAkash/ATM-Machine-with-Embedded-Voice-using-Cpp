		int d;
	cout<<"enter your account number";
	cin>>d;
		if(acc.returnacc()==d){
	cout<<"enter to deposit";
	cin>>f;
    acc.deposit_money+=d;
		Sleep(2000);
	cout<<"deposit successful";
		Sleep(2000);
		c=3;
		file.write((char*)&acc,sizeof(acc));

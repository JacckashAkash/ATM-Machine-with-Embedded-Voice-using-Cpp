	Sleep(2000);
	c=3;
	cout<<"successful modify";
	Sleep(1000);
	}}
	
		if(c!=3)
		{Sleep(2000);
		
		
		cout<<"not authorised";
			Sleep(2000);
	}


file.close();

}
   
void withdraw(){
	int d;
	int f;	
int c=3;
	cout<<"enter your account number";
	cin>>d;
	static int c1=0;	
		if(acc.returnacc()==d){
		
		cout<<"enter to withdraw";
		cin>>f;

	if(acc.balance()<f){
			Sleep(2000);
				Beep(523,2500);
	Beep(523,2500);
		cout<<"sorry,you cannot withdraw";
	}

	else{
	c=3;
	acc.deposit_money-=d;
		Sleep(2000);
			PlaySound(TEXT("withdraw.wav"),NULL,SND_SYNC);
			Sleep(1000);	
	cout<<"withdrawn successful";
		Sleep(2000);
	}}else if(c1!=2){

c1++;
cout<<"try again for it \n";
withdraw();}
else  {
	cout<<"looking like with wrong intention\n";
	PlaySound(TEXT("police.wav"),NULL,SND_SYNC);
	Beep(523,2500);

	cout<<"run run as you can\n";
	cout<<"Not authorised person";
	Sleep(2000);
	
	
	}
		fstream file;
	file.open("akku.txt",ios::in|ios::out);

while(file.read((char*)&acc,sizeof(acc))){

	if(acc.returnacc()==d){
	cout<<"enter to withdraw";
	cin>>f;
	if(acc.balance()<f){
			Sleep(2000);
			
		cout<<"sorry,you cannot withdraw";
	}
}
	else{
	c=3;
	acc.deposit_money-=d;
		Sleep(2000);
	cout<<"withdrawn successful";
		Sleep(2000);
	}
	file.write((char*)&acc,sizeof(acc));
	
	}
	
		if(c!=3){	
		Sleep(2000);
	cout<<"not authorised";
		Sleep(2000);
	}

	
	
}

void deposit(){
		fstream file;
